
#include <stdio.h>
#include <stdlib.h>

struct node {
    int data;
    struct node *next;
};

struct node *head = NULL;


void begininsert(void) {
    struct node *ptr;
    int value;

    ptr = (struct node *)malloc(sizeof(struct node));
    if (ptr == NULL) { printf("OVERFLOW\n"); return; }

    printf("Enter value to insert: ");
    scanf("%d", &value);

    ptr->data = value;
    ptr->next = head;
    head = ptr;

    printf("Node inserted at beginning\n");
}

void endinsert(void) {
    struct node *ptr, *temp;
    int value;

    ptr = (struct node *)malloc(sizeof(struct node));
    if (ptr == NULL) { printf("OVERFLOW\n"); return; }

    printf("Enter value to insert: ");
    scanf("%d", &value);

    ptr->data = value;
    ptr->next = NULL;

    if (head == NULL) {
        head = ptr;
        printf("Node inserted (list was empty)\n");
        return;
    }

    temp = head;
    while (temp->next != NULL) temp = temp->next;
    temp->next = ptr;
    printf("Node inserted at end\n");
}

void anyinsert(void) {
    int pos, i, value;
    struct node *ptr, *temp;

    ptr = (struct node *)malloc(sizeof(struct node));
    if (ptr == NULL) { printf("OVERFLOW\n"); return; }

    printf("Enter value to insert: ");
    scanf("%d", &value);
    printf("Enter position to insert: ");
    scanf("%d", &pos);

    if (pos < 0) { printf("cant insert: invalid position\n"); free(ptr); return; }

    ptr->data = value;
    ptr->next = NULL;

    if (pos == 0) {                
        ptr->next = head;
        head = ptr;
        printf("Inserted %d at position %d\n", value, pos);
        return;
    }

    if (head == NULL) {            
        printf("cant insert: position out of range\n");
        free(ptr);
        return;
    }

    temp = head;
    for (i = 0; i < pos - 1; i++) {
        if (temp == NULL) {         
            printf("cant insert: position out of range\n");
            free(ptr);
            return;
        }
        temp = temp->next;
    }
    if (temp == NULL) {            
        printf("cant insert: position out of range\n");
        free(ptr);
        return;
    }

    ptr->next = temp->next;         
    temp->next = ptr;
    printf("Inserted %d at position %d\n", value, pos);
}


void frontdelete(void) {
    struct node *temp;

    if (head == NULL) {
        printf("List is empty, nothing to delete\n");
        return;
    }

    temp = head;
    head = head->next;
    free(temp);
    printf("Node deleted from beginning\n");
}

void enddelete(void) {
    struct node *temp, *prev = NULL;

    if (head == NULL) {
        printf("List is empty, nothing to delete\n");
        return;
    }
    if (head->next == NULL) {   
        free(head);
        head = NULL;
        printf("Only node deleted\n");
        return;
    }

    temp = head;
    while (temp->next != NULL) {
        prev = temp;
        temp = temp->next;
    }
    prev->next = NULL;
    free(temp);
    printf("Node deleted from end\n");
}

void anydelete(void) {
    struct node *temp, *ptr;
    int pos, i;

    if (head == NULL) {
        printf("List is empty, nothing to delete\n");
        return;
    }

    printf("Enter position to delete: ");
    scanf("%d", &pos);

    if (pos < 0) {
        printf("Position out of range\n");
        return;
    }

    if (pos == 0) {               
        temp = head;
        head = head->next;
        free(temp);
        printf("Node deleted from position %d\n", pos);
        return;
    }

    temp = head;
    for (i = 0; i < pos - 1; i++) {
        if (temp == NULL || temp->next == NULL) {
            printf("Position out of range\n");
            return;
        }
        temp = temp->next;
    }

    ptr = temp->next;            
    if (ptr == NULL) {
        printf("Position out of range\n");
        return;
    }

    temp->next = ptr->next;
    free(ptr);
    printf("Node deleted from position %d\n", pos);
}


void display(void) {
    struct node *ptr = head;

    if (ptr == NULL) {
        printf("NULL\n");
        return;
    }
    while (ptr != NULL) {
        printf("%d -> ", ptr->data);
        ptr = ptr->next;
    }
    printf("NULL\n");
}


int main(void) {
    int choice;

    while(1){
        printf("\n--- Singly Linked List Menu ---\n");
        printf("1. Insert at Beginning\n");
        printf("2. Insert at End\n");
        printf("3. Insert at Position\n");
        printf("4. Delete at Beginning\n");
        printf("5. Delete at End\n");
        printf("6. Delete at Position\n");
        printf("7. Display\n");
        printf("8. Exit\n");
        printf("Enter choice: ");
        scanf("%d",&choice);

        switch (choice) {
            case 1: begininsert(); break;
            case 2: endinsert(); break;
            case 3: anyinsert(); break;
            case 4: frontdelete(); break;
            case 5: enddelete(); break;
            case 6: anydelete(); break;
            case 7: display(); break;
            case 8: return 0;
            default: printf("Invalid choice\n");
        }
    }
}


