/**
 * Definition for singly-linked list.
 * struct ListNode {
 *     int val;
 *     struct ListNode *next;
 * };
 */
bool isPalindrome(struct ListNode* head) {
    
    struct ListNode *prev=NULL, *curr=head, *post =NULL,*l1,*l2;

while(curr!= NULL)
{
    post=curr->next;
    curr->next=prev;
    prev=curr;
    curr=post;
}
l1=head;
l2=prev;
while(l1!=NULL && l2!=NULL)
{
    if(l1->val != l2->val)
return false;
    else
   l1=l1->next;
l2=l2->next;
}
return true;
}
